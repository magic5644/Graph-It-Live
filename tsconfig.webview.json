{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "./out-webview",
    "rootDir": "./src/webview",
    "noEmit": true
  },
  "include": [
    "src/webview/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}